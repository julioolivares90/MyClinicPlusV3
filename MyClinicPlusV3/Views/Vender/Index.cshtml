<div class="container-fluid">
    <div class="row align-items-start justify-content-center mt-4">
        <div class="col-sm-6">
            <div class="form-group">
                <div class="card">
                    <div class="card-header">Buscar Medicamento:</div>
                    <div class="card-body">
                        <form action="/" method="post" class="form-row">
                            <label for="txtBuscarProducto" class="col">Buscar producto</label>
                            <input id="txtBuscarProducto" placeholder="buscar producto" type="text" class="form-control ml-4 col" />
                            <button id="btnBuscar" class="btn btn-primary ml-4 col">Buscar Producto</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col">
            <div class="form-group">
                <div class="form-group">
                    <label>Medicamento :</label>
                    <input type="text" name="txtMedicamento" id="txtMedicamento" disabled class="form-control" value="" />
                </div>
                <div class="form-group">
                    <label>Stock :</label>
                    <input type="text" name="txtStock" id="txtStock" disabled class="form-control" value="" />
                </div>
                <div class="form-group">
                    <label>Fecha :</label>
                    <input type="text" name="txtFecha" id="txtFecha" class="form-control" disabled value="@DateTime.Now.Date" />
                </div>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label>precio :</label>
                <input type="text" name="txtPrecio" id="txtPrecio" disabled class="form-control" value="" />
            </div>
            <div class="form-group">
                <label> Cantidad:</label>
                <input type="text" name="txtCantidad" id="txtCantidad" class="form-control" value="" />
            </div>
            <div class="form-group">
                <label>Descuento :</label>
                <input type="text" name="txtDescuento" id="txtDescuento" class="form-control" />
            </div>
        </div>
        <div class="col">
            <div class="form-group mt-5 md-8">
                <button id="btnAgregar" class="btn btn-success">Agregar Medicamento</button>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div>
                <table class="table table-dark">
                    <tr>
                        <td>Id</td>
                        <td>Producto</td>
                        <td>Cantidad</td>
                        <td></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>


@section Scripts {


<script type="text/javascript" src="~/js/Vender.js"></script>
}

